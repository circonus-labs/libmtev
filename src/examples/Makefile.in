.SUFFIXES:	.lo

Q=
ifeq ($(V),)
	Q=@
endif

top_srcdir=@top_srcdir@

CC=@CC@
CPPFLAGS=-I$(top_srcdir)/src @CPPFLAGS@ \
	-I$(top_srcdir)/src/json-lib -I$(top_srcdir)/src/utils -I$(top_srcdir)/src/modules
CFLAGS=@CFLAGS@ @CFLAGSEXTRAS@
SHCFLAGS=@SHCFLAGS@ @CFLAGSEXTRAS@
LDFLAGS=@LDFLAGS@
DEPFLAGS=@DEPFLAGS@
AR=@AR@
RANLIB=@RANLIB@
LIBS=@EXAMPLE_LIBS@
INSTALL=@INSTALL@

ES_OBJS=	echo_server.o

EC_OBJS=	echo_client.o

EX1_OBJS=	example1.o

FQR_OBJS=	fq-router.o

WSC_OBJS=	websocket_client.o

WSS_OBJS=	websocket_server.o

all:	echo_server echo_client example1 fq-router websocket_client websocket_server

.c.o:
	@echo "- compiling $<"
	$(Q)$(CC) $(CPPFLAGS) $(CFLAGS) -c $<

echo_server:	$(ES_OBJS)
	@echo "- linking $@"
	@echo "LDFLAGS=$(LDFLAGS)"
	$(Q)$(CC) -L.. $(LDFLAGS) -o $@ $(ES_OBJS) $(LIBS) -lmtev

echo_client:	$(EC_OBJS)
	@echo "- linking $@"
	@echo "LDFLAGS=$(LDFLAGS)"
	$(Q)$(CC) -L.. $(LDFLAGS) -o $@ $(EC_OBJS) $(LIBS) -lmtev

example1:	$(EX1_OBJS)
	@echo "- linking $@"
	$(Q)$(CC) -L.. $(LDFLAGS) -o $@ $(EX1_OBJS) $(LIBS) -lmtev

fq-router:	$(FQR_OBJS)
	@echo "- linking $@"
	$(Q)$(CC) -L.. $(LDFLAGS) -o $@ $(FQR_OBJS) $(LIBS) -lmtev -lfq

websocket_client:	$(WSC_OBJS)
	@echo "- linking $@"
	@echo "LDFLAGS=$(LDFLAGS)"
	@$(CC) -L.. $(LDFLAGS) $(LIBS) -o $@ $(WSC_OBJS) -lmtev

websocket_server:	$(WSS_OBJS)
	@echo "- linking $@"
	@echo "LDFLAGS=$(LDFLAGS)"
	$(Q)$(CC) -L.. $(LDFLAGS) -o $@ $(WSS_OBJS) $(LIBS) -lmtev

clean:
	rm -f *.o example1 websocket_server websocket_client fq-router echo_server echo_client

distclean:	clean
	rm -f Makefile
