libmtev-objs/%.lo:	%.lo
	$(Q)mkdir -p "`dirname $@`"
	@echo "- making private $@"
	$(Q)cp $(@:libmtev-objs/%.lo=%.lo) $@.noctf
	$(Q)if test -x "$(CTFCONVERT)" ; then \
		echo "- making CTF ($@)" ; \
		$(CTFCONVERT) $(CTFNOSTRIP) -i -l @VERSION@ $@.noctf ; \
	fi
	$(Q)mv $@.noctf $@

libmtev-objs/%.hlo:	%.hlo
	$(Q)mkdir -p "`dirname $@`"
	@echo "- making private $@"
	$(Q)cp $(@:libmtev-objs/%.hlo=%.hlo) $@.noctf
	$(Q)if test -x "$(CTFCONVERT)" ; then \
		echo "- making CTF ($@)" ; \
		$(CTFCONVERT) $(CTFNOSTRIP) -i -l @VERSION@ $@.noctf ; \
	fi
	$(Q)mv $@.noctf $@

