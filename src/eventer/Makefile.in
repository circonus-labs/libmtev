.SUFFIXES:	.lo

top_srcdir=@top_srcdir@

CC=@CC@
CPPFLAGS=-I$(top_srcdir)/src -I$(top_srcdir)/src/json-lib \
	-I$(top_srcdir)/src/utils @CPPFLAGS@
CFLAGS=@CFLAGS@ @CFLAGSEXTRAS@
SHCFLAGS=@SHCFLAGS@ @CFLAGSEXTRAS@
LDFLAGS=@LDFLAGS@
DEPFLAGS=@DEPFLAGS@
AR=@AR@
RANLIB=@RANLIB@
LIBS=@LIBS@
INSTALL=@INSTALL@

all:

.c.lo:
	@$(CC) $(CPPFLAGS) $(SHCFLAGS) -c $< -o $@
	@echo "- compiling $<"

clean:
	rm -f *.o *.lo

distclean:	clean
	rm -f Makefile

Makefile.dep:
	$(CC) -I. -I.. $(CPPFLAGS) $(CFLAGS) $(DEPFLAGS) *.c > Makefile.dep
	$(top_srcdir)/buildtools/culldeps.sh Makefile.dep

include Makefile.dep
